<%= form_with scope: :contact_form, url: contact_us_path, method: :post, local: true, class: "container" do |form| %>
    <%= form.hidden_field :waza %>
    <div class="form-group mb-3">
      <%= form.label :name, class: "mb-2" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= form.label :last_name, class: "mb-2" %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= form.label :email, class: "mb-2" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group mb-3">
      <%= form.label :message, class: "mb-2" %>
      <%= form.text_area :message, class: "form-control" %>
    </div>
    <%= form.submit "Submit", class: "btn btn-dark rounded-4 mt-4" %>
  <% end %>
